<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3><%= User.find(current_user.id).username %></h3>
    <hr>
    </div>
  </div>


  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
      
      <% @photos.each do |photo| %>
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= photo.user_id %>"> <%= photo.user.username %></a></a>
            <small>
              <%= time_ago_in_words(photo.created_at) %> ago
            </small>
          </h3>
        </div>
        
        
        
        
        <div class="panel-body">
          <a href="/photos/<%= photo.id %>">
            <img src="<%= photo.image %>" class="img-responsive">
          </a>
          
          <div>
            <!-- Logic to put in a filled heart vs empty heart -->
            <% if photo.fans.any? {|u| u[:username] == User.find(current_user.id).username} == true %>
              <% photo.likes.each do |like| %>
                <% if like.user_id == current_user.id %>
                  <a href="/delete_like/<%= like.id %>" class="btn btn-link"><i class="fa fa-heart"></i></a>
                <% end %>
              <%end%>
            <% else %>
                <form action="/create_like" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token %>>
                <input type="hidden" name="photo_id" value=<%= photo.id %>>

                <input type="hidden" name="user_id" value=<%= current_user.id %>>

                <button class="btn btn-link">
                  <i class="fa fa-heart-o"></i>
                </button>
              </form>
            <% end %>
              
            <!-- Show list of user names who like photo -->
            <p>
            <% photo.fans.each do |fan| %>
                <%= fan.username %>
            <% end %>
            like this 
            </p> 
          </div>
          
          
          
          
          <!-- Show existing comments -->
          <div>
            <ul class="media-list">
              <!-- Show photo caption as comment first -->
              <li class="media">
                <div class="media-body">
                  <h6 class="media-heading">
                    <a href="/users/<%= current_user.id %>"> <%= User.find(current_user.id).username %> </a>
                    <small>
                      <%= time_ago_in_words(photo.created_at) %>
                    </small>
                  </h6>
                  <%= photo.caption %>
                </div>
              </li>
                    
              <% photo.comments.each do |comment| %>
              <li class="media">
                <div class="media-body">
                  <h6 class="media-heading">
                    <a href="/users/<%= comment.user_id %>"> <%= User.find(comment.user_id).username %> </a>
                    <small>
                      <%= time_ago_in_words(comment.created_at) %>
                    </small>
                  </h6>
                  <%= comment.body %>
                </div>
              </li>
              <% end %>
            
          
            <!-- Allow users to add a comment to photo -->
            <li class="media">
              <div class="media-body">
                <form action="/create_comment" method="post">
                  <!-- Hidden input for authenticity token to protect from forgery -->
                  <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token %>>

                  <input type="hidden" name="photo_id" value=<%= photo.id %>>

                  <input type="hidden" name="user_id" value=<%= current_user.id%>>

                  <!-- Label and input for body -->
                  <div class="form-group">
                    <label for="body" class="sr-only">
                      Body
                    </label>

                    <div class="input-group">
                      <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>

                      <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                          <i class="fa fa-commenting-o"></i>
                        </button>
                      </span>
                    </div><!-- /input-group -->
                  </div>
                </form>
              </div>
            </li>
          </ul>
        </div>
          
          
          
          
          
          
          
          
          
          
          
          <%if current_user.id == photo.user_id %>  
            <div class="btn-group btn-group-justified">
              <a href="/photos" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
              <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          <% else %>
            <div class="btn-group btn-group-justified">
              <a href="/photos" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
            </div>
          <%end %>  
          
        </div>
      
      <% end %>
        
    </div>
  </div>
</div>
</div>